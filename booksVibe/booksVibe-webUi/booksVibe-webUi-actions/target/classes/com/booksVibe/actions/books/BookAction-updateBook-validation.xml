<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

	<field name="bookTitle">
		<field-validator type="requiredstring">
			<message key="Title.required"></message>
		</field-validator>
	</field>


	<field name="author">
		<field-validator type="requiredstring">
			<message key="Author.required"></message>
		</field-validator>
	</field>


	<field name="category">
		<field-validator type="requiredstring">
			<message key="Category.required"></message>
		</field-validator>
	</field>


	<field name="publisher">
		<field-validator type="requiredstring">
			<message key="Publisher.required"></message>
		</field-validator>
	</field>
	
	<field name="kimage">
		<field-validator type="required">
			<message key="File.required"></message>
		</field-validator>
	</field>

</validators>